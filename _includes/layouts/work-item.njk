---
layout: layouts/base.njk
section: about
---

<main class="case-study-page">
  <section class="cs-page-hero">
  <div class="cs-page-header f-mb8 f-mb10-m">
    <h1 class="f-mb3 page-title">{{ title }}</h1>
    <h4 class="f-ma0 caption-title">{{ company }} â€“ {{ platform }}</h4>
  </div>
  <figure class="f-mb8 f-mb10-m cs-page-cover">
    <img  data-srcset=" /static/images/{{ heroImage }}?nf_resize=fit&w=400 400w,
                  /static/images/{{ heroImage }}?nf_resize=fit&w=600 600w,
                  /static/images/{{ heroImage }}?nf_resize=fit&w=800 800w,
                  /static/images/{{ heroImage }}?nf_resize=fit&w=1000 1000w,
                  /static/images/{{ heroImage }}?nf_resize=fit&w=1500 1500w,
                  /static/images/{{ heroImage }}?nf_resize=fit&w=2000 2000w"
          sizes="(min-width: 1000px) 1000px, 100vw"
          data-src="/static/images/{{ heroImage }}?nf_resize=fit&w=2000"
          alt="{{ heroImageAlt }}"
          class="f-db lozad">
  </figure>
</section>
<section class="cs-project-information f-mb8 f-mb12-m">
  <div class="wrapper">
    <div class="c-project-info__list">
      <div class="c-project-info__item">
        <h3 class="c-project-info__title">Company</h3>
        <h4 class="c-project-info__text">{{ company }}</h4>
      </div>
      <div class="c-project-info__item">
        <h3 class="c-project-info__title">Project Duration</h3>
        <h4 class="c-project-info__text">{{ projectDuration }}</h4>
      </div>
      <div class="c-project-info__item">
        <h3 class="c-project-info__title">Role</h3>
        <h4 class="c-project-info__text">{{ role }}</h4>
      </div>
    </div>
  </div>
</section>
{{ layoutContent | safe }}
</main>
